@{
    ViewData["Title"] = "Juego";
}
<div style="display: flex; flex-direction: column">
<div style="float: right; clear: both;">
<h3>@ViewBag.username</h3>
<h4>Puntaje: @ViewBag.puntajeActual </h4>
</div>
<div style="text-align: center; justify-content: center">
  <h4>Pregunta NÂ°@ViewBag.pregunta.IDPregunta</h4>
  <h1>@ViewBag.pregunta.enunciado</h1>
</div>

<div style="width: 100%; display: flex;">
<form method="post" action='@Url.Action("VerificarRespuesta", new {IDPregunta=@ViewBag.pregunta.IDPregunta})'>
<p>Elija la respuesta:</p>
<div class="center-container">
<div class="center-box" style="margin-top: -10%;">
@foreach (Respuesta res in ViewBag.respuestas)
{
   <div class="button-form">
            <button type='submit' name='IDRespuesta' value="@res.IDRespuesta">@res.contenido</button>
          </div>
    
}
  </div>
  </div>
</form>
</div>
<div class="container" style="margin-top: 5%; display: flex; flex-direction: column; justify-content: center;">
  <div class="bar-container" style="margin: 0px">
    <div class="bar"></div>
  </div>
  <div class="timer">Tiempo restante:  <span id="countdown">30</span> segundos</div>
</div>
</div>